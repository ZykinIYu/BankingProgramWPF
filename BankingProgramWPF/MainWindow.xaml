<Window x:Class="BankingProgramWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingProgramWPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="550" 
        Width="1250"
        MinHeight="400"
        MinWidth="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="lvWorkers" 
                  Grid.Column="2" 
                  Margin="10"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch"
                  DataContext="{Binding SelectedUser}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding MiddleName}"/>
                    <GridViewColumn Header="Номер телефона" DisplayMemberBinding="{Binding PhoneNumber}"/>
                    <GridViewColumn Header="Серия и № паспорта" DisplayMemberBinding="{Binding SeriesNumberPassport}"/>
                    <GridViewColumn Header="Дата изменения" DisplayMemberBinding="{Binding DateTimeEntryModified}"/>
                    <GridViewColumn Header="Что изменено" DisplayMemberBinding="{Binding WhatDataChanged}"/>
                    <GridViewColumn Header="Тип изменения" DisplayMemberBinding="{Binding TypeChange}"/>
                    <GridViewColumn Header="Кто изменил" DisplayMemberBinding="{Binding WhoChangedData}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel 
            HorizontalAlignment="Stretch" 
            Margin="10" 
            VerticalAlignment="Stretch">
            <ComboBox
                x:Name="userWPF"
                Margin="10" 
                SelectionChanged="userWPF_SelectionChanged">
                <ComboBoxItem>
                    <TextBlock
                        Text="Консультант"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock 
                        Text="Менеджер"/>
                </ComboBoxItem>
            </ComboBox>

            <TextBlock 
                x:Name="idTB"
                Margin="10 0 10 10"
                Text="{Binding ElementName=lvWorkers, Path=SelectedItem.Id}"/>

            <TextBlock 
                Margin="10 0 10 10"
                Text="Фамилия"/>
            
            <TextBox 
                x:Name="surnameTB"
                Margin="10 0 10 10" 
                Text="{Binding ElementName=lvWorkers, Path=SelectedItem.Surname, Mode=OneWay}"/>

            <TextBlock 
                Margin="10 0 10 10"
                Text="Имя"/>
            
            <TextBox 
                x:Name="nameTB"
                Margin="10 0 10 10"
                Text="{Binding ElementName=lvWorkers, Path=SelectedItem.Name, Mode=OneWay}"/>

            <TextBlock 
                Margin="10 0 10 10"
                Text="Отчество"/>
            
            <TextBox 
                x:Name="middleNameTB"
                Margin="10 0 10 10"
                Text="{Binding ElementName=lvWorkers, Path=SelectedItem.MiddleName, Mode=OneWay}"/>

            <TextBlock 
                Margin="10 0 10 10"
                Text="Номер телефона"/>
            
            <TextBox 
                x:Name="phoneNumberTB"
                Margin="10 0 10 10"
                Text="{Binding ElementName=lvWorkers, Path=SelectedItem.PhoneNumber, Mode=OneWay}"/>

            <TextBlock 
                Margin="10 0 10 10"
                Text="Серия и номер паспорта"/>
            
            <TextBox 
                x:Name="seriesNumberPassportTB"
                Margin="10 0 10 10"
                Text="{Binding ElementName=lvWorkers, Path=SelectedItem.SeriesNumberPassport, Mode=OneWay}"/>

            <Button 
                x:Name="addUser"
                Content="Добавить"
                Margin="10 0 10 10" Click="Button_ClickAddUser"/>

            <Button
                x:Name="create"
                Content="Редактировать"
                Margin="10 0 10 10" 
                Click="Button_ClickCreate"/>

            <Button 
                x:Name="remove"
                Content="Удалить"
                Margin="10 0 10 10" Click="Button_ClickRemove"/>

            <Button 
                Content="Сортировать по алфавиту"
                Margin="10 0 10 10"/>
        </StackPanel>
    </Grid>
</Window>
